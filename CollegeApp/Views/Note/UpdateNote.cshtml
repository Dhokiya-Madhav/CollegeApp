@model CollegeApp.Models.Note

@{
    ViewData["Title"] = "Edit";
}


<center>
    <div>
        <div>
            <form asp-action="UpdateNote">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <div class="form-group">
                    
                    <input asp-for="noteTitle" class="form-control" />
                    <span asp-validation-for="noteTitle" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <textarea placeholder="Note Description" asp-for="noteDesc" class="form-control" row="2" column="10"></textarea>
                    <!--<input asp-for="Email" class="form-control" />-->
                    <span asp-validation-for="noteDesc" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-outline-dark" />
                </div>
            </form>
        </div>
    </div>
</center>


